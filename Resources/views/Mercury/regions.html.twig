{% block simple %}
    {{block('content')}}
{% endblock %}

{% block full %}
    {{block('content')}}
{% endblock %}

{% block markupable %}
    {{block('content')}}
{% endblock %}

{% block snippetable %}
    {{block('content')}}
{% endblock %}

{% block content %}
    <{{tag}} {{block('attr')}}>{{content|raw}}</{{tag}}>
{% endblock %}

{% block image %}
    <img {{block('attr')}} src="{{content}}" />
{% endblock %}

{% block attr %}
id="{{id}}"
{%- if class is defined %}
 class="{{class}}"
{%- endif %}
{%- if style is defined %}
 style="{{style}}"
{%- endif %}
 data-mercury="{{type}}"
{%- endblock %}
